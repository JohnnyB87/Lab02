<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.GameTab"
            prefHeight="400.0" prefWidth="600.0">
    <BorderPane fx:id="pane"  style="-fx-background-color: red;" minHeight="350" minWidth="400"/>
    <TilePane fx:id="tileButtons" alignment="CENTER" layoutY="275" orientation="HORIZONTAL" hgap="10" minHeight="75" prefWidth="400" style="-fx-background-color: #112189;">
        <Button fx:id="guess" onAction="#exitGame"/>
        <Button fx:id="exit" text="Exit" onAction="#exitGame"/>
        <Button fx:id="reset" text="Reset" onAction="#resetGame"/>
    </TilePane>

</AnchorPane>
